{
  "rules": {
    "public_chat": {
      ".read": "auth != null",
      ".write": "auth != null || newData.child('userId').val() === 'aizen-ai'",
      ".indexOn": ["timestamp"],
      "$message_id": {
        ".validate": "newData.hasChildren(['userId', 'userName', 'content', 'timestamp'])",
        "userId": {
          ".validate": "newData.val() === auth.uid || newData.val() === 'aizen-ai'"
        },
        "userName": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50"
        },
        "content": {
          ".validate": "newData.isString() && newData.val().length <= 500"
        },
        "timestamp": {
          ".validate": "newData.isNumber() || newData.val() === now"
        },
        "userAvatar": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 500)"
        },
        "mentions": {
          ".validate": "true"
        },
        "gifUrl": {
          ".validate": "!newData.exists() || newData.isString()"
        },
        "animeCard": {
          ".validate": "!newData.exists() || (newData.hasChildren(['id', 'title', 'image']) && newData.child('id').isString() && newData.child('title').isString() && newData.child('image').isString())"
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}