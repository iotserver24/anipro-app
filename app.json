{
  "expo": {
    "name": "anipro",
    "slug": "anipro",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.r3ap3reditz.anipro",
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch",
          "fetch"
        ],
        "NSDocumentsDirectory": true,
        "LSSupportsOpeningDocumentsInPlace": true,
        "UIFileSharingEnabled": true,
        "NSPhotoLibraryUsageDescription": "Allow access to save downloaded videos",
        "NSPhotoLibraryAddUsageDescription": "Allow access to save downloaded videos",
        "ITSAppUsesNonExemptEncryption": false
      },
      "associatedDomains": [
        "applinks:yourdomain.com",
        "applinks:yourdomain.com"
      ],
      "allowsFullScreenVideo": true
    },
    "android": {
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "anipro",
              "host": "*",
              "pathPrefix": "/anime"
            },
            {
              "scheme": "anipro",
              "host": "*",
              "pathPrefix": "/anime/watch"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "package": "com.r3ap3reditz.anipro",
      "permissions": [
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "allowsFullScreenVideo": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "react-native-video",
      [
        "expo-file-system",
        {
          "downloadDirectory": "AniPro"
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": false
        }
      ]
    ],
    "scheme": "anipro",
    "fonts": [
      {
        "asset": "assets/fonts/Poppins-Regular.ttf",
        "family": "Poppins-Regular"
      },
      {
        "asset": "assets/fonts/Poppins-Medium.ttf",
        "family": "Poppins-Medium"
      },
      {
        "asset": "assets/fonts/Poppins-SemiBold.ttf",
        "family": "Poppins-SemiBold"
      },
      {
        "asset": "assets/fonts/Poppins-Bold.ttf",
        "family": "Poppins-Bold"
      }
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "69442921-1758-493b-9ddf-d3cc35e5604f"
      }
    }
  }
}
